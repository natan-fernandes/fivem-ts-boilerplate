{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./",
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "ES2020",
    "target": "ES2021",
    "allowJs": true,
    "lib": ["ES2021"],
    "types": ["@citizenfx/client", "@types/node"],
    "moduleResolution": "node",
    "paths": {
      "@common/*": ["../../../../common/*"],
    },
  },
  "include": ["./**/*"],
  "exclude": ["**/node_modules"]
}
